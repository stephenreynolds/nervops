---
import ProjectCard from './ProjectCard.astro';

const projects = [
  {
    name: 'NervOps.com',
    status: 'OPERATIONAL',
    description: 'This site. Portfolio and operational overview of the MAGI System.',
    url: 'https://github.com/stephenreynolds/nervops'
  },
  {
    name: 'OptionSheet',
    status: 'IN DEVELOPMENT',
    description: 'Frontend for a work-in-progress tool for logging and analyzing options portfolios. TypeScript.',
    url: 'https://github.com/stephenreynolds/optionsheet'
  },
  {
    name: 'flamegraph-ai',
    status: 'IN DEVELOPMENT',
    description: 'TypeScript project under active development.',
    url: 'https://github.com/stephenreynolds/flamegraph-ai'
  }
];
---

<section id="projects" class="section">
  <div class="container">
    <p class="section-label reveal">// ACTIVE DEPLOYMENTS</p>
    <div class="projects-grid">
      {projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </div>
</section>
